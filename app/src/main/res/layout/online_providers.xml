<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/providers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online Providers"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:textColor="@color/darkGray"
            android:textSize="15sp"
            android:layout_marginStart="190dp"/>
    </LinearLayout>

<LinearLayout
    android:id="@+id/online_providers"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="15dp"
    android:layout_marginStart="10dp">
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_asad"/>
    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/stroke_circle_white"
        android:layout_gravity="end|bottom"
        >
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/green_circle"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
             />
    </RelativeLayout>

</FrameLayout>

    <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginStart="15dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_asli"/>
    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/stroke_circle_white"
        android:layout_gravity="end|bottom"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/green_circle"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            />
    </RelativeLayout>

</FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ilisa"/>
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/stroke_circle_white"
            android:layout_gravity="end|bottom"
            >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/orange_circle"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                />
        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brown_asad"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3+"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/light_grey_cirlcle">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:src="@drawable/dots_circles"/>
            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="1dp"
                android:src="@drawable/dots_circles"/>
            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="1dp"
                android:src="@drawable/dots_circles"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
</LinearLayout>